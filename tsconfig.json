{
  "compilerOptions": {
    "allowJs": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["ESNext"],
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "./lib/",
    "resolveJsonModule": true,
    "declaration": true,
    "useDefineForClassFields": true,
    "sourceMap": false,
    "strict": true,
    "stripInternal": true,
    "target": "es5"
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/*", "./**/*.test.*", "./lib"]
}
